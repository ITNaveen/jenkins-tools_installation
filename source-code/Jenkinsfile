pipeline {
    agent {
        node {
            label 'maven'
        }
    }

    environment {
        PATH = "/opt/apache-maven-3.9.9/bin:$PATH"
    }

    stages {
        stage('build') {
            steps {
                dir('source-code') {
                    echo "now inside the source-code dir"
                    sh 'mvn clean deploy'

                }
            }
        }
    }
}
