pipeline {
    agent {
        node {
            label 'maven'
        }
    }

    environment {
        PATH = "/opt/apache-maven-3.9.9/bin:$PATH"
    }

    stages {
        stage('build') {
            steps {
                dir('source-code') {
                    echo "now inside the source-code dir"
                    sh 'mvn clean deploy'

                }
            }
        }

        stage('SonarQube analysis') {
        environment {
            scannerHome = tool 'sonar-scanner' //this is tool name.
        }
            steps {
                dir ('source-code') {
                    withSonarQubeEnv('sonarqube-server') { // server name, to be found in system in jenkins.
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }
    } 
}